<div class="card mb-3">
  <div class="card-header bg-secondary text-white">
    <h5 class="mb-0">Coach</h5>
  </div>
  <div class="card-body">
    <div class="d-flex align-items-center">
      <div class="rounded-circle overflow-hidden" style="width: 60px; height: 60px;">
        <img src="https://localhost:8008/uploads/coach-photos/{{ entity.instance.coach.imageFilename }}" 
             alt="Photo du coach" 
             class="img-fluid" 
             style="width: 100%; height: 100%; object-fit: cover;">
      </div>
      <div class="ml-3" style="margin-left:10px">
        <h6 class="mb-0">{{ entity.instance.coach.prenom }} {{ entity.instance.coach.nom }}</h6>
        <p class="text-muted mb-0">Coach professionnel</p>
      </div>
    </div>
  </div>
</div>