<div class="card mb-3">
  <div class="card-header bg-warning text-dark">
    <h5 class="mb-0">Niveau de difficult√©</h5>
  </div>
  <div class="card-body">
    <div class="d-flex align-items-center justify-content-center">
      {% if entity.instance.difficulte == 'facile' %}
        <span class="badge badge-success px-4 py-2" style="font-size: 1.2rem;">Facile</span>
      {% elseif entity.instance.difficulte == 'moyen' %}
        <span class="badge badge-warning px-4 py-2" style="font-size: 1.2rem;">Moyen</span>
      {% else %}
        <span class="badge badge-danger px-4 py-2" style="font-size: 1.2rem;">Difficile</span>
      {% endif %}
    </div>
  </div>
</div>